# AcademicGuard Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=AcademicGuard
APP_ENV=development
DEBUG=true

# Server Settings
HOST=127.0.0.1
PORT=8000

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./data/academicguard.db

# LLM Provider Settings
# Options: dashscope | volcengine | deepseek | gemini | anthropic | openai
LLM_PROVIDER=dashscope
LLM_MODEL=qwen-plus
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# DashScope (阿里云灵积) API - Qwen models (Recommended)
# DashScope API - 通义千问模型（推荐）
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_MODEL=qwen-plus

# Volcengine (火山引擎) DeepSeek API - faster than official
# 火山引擎 DeepSeek API - 比官方更快
VOLCENGINE_API_KEY=your-volcengine-api-key-here
VOLCENGINE_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
VOLCENGINE_MODEL=deepseek-v3-2-251201

# DeepSeek API (Official)
DEEPSEEK-API-KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com


# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/academicguard

# Cache & Queue (Redis)
REDIS_URL=redis://localhost:6379/0

# LLM API Keys
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI API (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Default Settings
DEFAULT_COLLOQUIALISM_LEVEL=4
DEFAULT_TARGET_LANG=zh
SEMANTIC_SIMILARITY_THRESHOLD=0.80

# Optional: Redis for caching (leave empty for local cache)
REDIS_URL=
