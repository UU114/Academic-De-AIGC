# AcademicGuard Environment Configuration Template
# 环境配置模板

# Application Settings
APP_NAME=AcademicGuard
DEBUG=false

# LLM Provider Settings
LLM_PROVIDER=dashscope
LLM_MODEL=qwen-plus

# API Keys - 请替换为实际密钥 | Replace with actual keys
DASHSCOPE_API_KEY=your_dashscope_api_key_here
VOLCENGINE_API_KEY=your_volcengine_api_key_here

# Security - 生成强密钥 | Generate strong keys
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_chars
ADMIN_SECRET_KEY=your_admin_secret_key_here

# Default Settings
DEFAULT_COLLOQUIALISM_LEVEL=4
DEFAULT_TARGET_LANG=en
SEMANTIC_SIMILARITY_THRESHOLD=0.80

# Frontend Settings (Vite requires VITE_ prefix)
# 前端设置（Vite 需要 VITE_ 前缀）

# Aliyun CAPTCHA Configuration - 阿里云验证码配置
# Get these from Aliyun Console: https://www.aliyun.com/product/captcha
# 从阿里云控制台获取: https://www.aliyun.com/product/captcha
VITE_ALIYUN_CAPTCHA_SCENE_ID=your_scene_id_here
VITE_ALIYUN_CAPTCHA_APP_KEY=your_app_key_here
