# AcademicGuard Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=AcademicGuard
APP_ENV=development
DEBUG=true

# Server Settings
HOST=127.0.0.1
PORT=8000

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./data/academicguard.db

# LLM Provider Settings
# Options: deepseek | anthropic | openai
LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-chat
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# DeepSeek API (Recommended - cost-effective)
DEEPSEEK-API-KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com


# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/academicguard

# Cache & Queue (Redis)
REDIS_URL=redis://localhost:6379/0

# LLM API Keys
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI API (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Default Settings
DEFAULT_COLLOQUIALISM_LEVEL=4
DEFAULT_TARGET_LANG=zh
SEMANTIC_SIMILARITY_THRESHOLD=0.80

# Optional: Redis for caching (leave empty for local cache)
REDIS_URL=
